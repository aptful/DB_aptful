<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".keywordEditScreen"
    android:background="#fff8dc"
    >

    <!--久保田-->

    <!--帯-->
    <!--きーわーど-->
    <TextView
        android:id="@+id/keywordScreenText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="きーわーど"
        android:textStyle="bold"
        android:textColor="#696969"
        android:textSize="30sp" />

    <!--オレンジのライン-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:id="@+id/line_orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        android:background="#ff7f50"/>

    <!--ホームボタン-->
    <ImageButton
        android:id="@+id/homeButton"
        android:background="@drawable/home"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_marginTop="-80dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/home" />

    <!--戻るボタン-->
    <ImageButton
        android:id="@+id/backButton"
        android:background="@drawable/back_normal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="-60dp"
        android:layout_marginStart="20sp"
         />

    <!--スクロール-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="25dp">

        <!--スクロール範囲-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--テイクアウトの文字-->
            <TextView
                android:id="@+id/takeoutText"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:text="テイクアウト"
                android:textSize="18sp" />

            <!--追加ボタン-->
            <TextView
                android:id="@+id/addButton"
                android:layout_width="90dp"
                android:layout_height="39dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:background="#ff7f50"
                android:gravity="center"
                android:text="追加"
                android:textColor="#fff8dc"
                android:textSize="15sp" />

            <!--スイーツの文字-->
            <TextView
                android:id="@+id/sweetsText"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="-270dp"
                android:layout_marginTop="70dp"
                android:text="スイーツ"
                android:textSize="18sp" />

            <!--追加済ボタン-->
            <TextView
                android:id="@+id/addedButton"
                android:layout_width="90dp"
                android:layout_height="39dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="追加済"
                android:textColor="#ff7f50"
                android:textSize="15sp" />

            <!--ドリンクの文字-->
            <TextView
                android:id="@+id/drinkText"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="-270dp"
                android:layout_marginTop="120dp"
                android:text="ドリンク"
                android:textSize="18sp" />

            <!--追加済ボタン-->
            <TextView
                android:id="@+id/added2Button"
                android:layout_width="90dp"
                android:layout_height="39dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="追加済"
                android:textColor="#ff7f50"
                android:textSize="15sp" />

            <!--カフェの文字-->
            <TextView
                android:id="@+id/cafeText"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="-270dp"
                android:layout_marginTop="170dp"
                android:text="カフェ"
                android:textSize="18sp" />

            <!--追加済ボタン-->
            <TextView
                android:id="@+id/added3Button"
                android:layout_width="90dp"
                android:layout_height="39dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="170dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="追加済"
                android:textColor="#ff7f50"
                android:textSize="15sp" />

            <!--手土産の文字-->
            <TextView
                android:id="@+id/souvenirsText"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="-270dp"
                android:layout_marginTop="220dp"
                android:text="手土産"
                android:textSize="18sp" />

            <!--追加済ボタン-->
            <TextView
                android:id="@+id/added4Button"
                android:layout_width="90dp"
                android:layout_height="39dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="220dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="追加済"
                android:textColor="#ff7f50"
                android:textSize="15sp" />

            <!--創作料理の文字-->
            <TextView
                android:id="@+id/creativecuisineText"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="-270dp"
                android:layout_marginTop="270dp"
                android:text="創作料理"
                android:textSize="18sp" />

            <!--追加済ボタン-->
            <TextView
                android:id="@+id/added5Button"
                android:layout_width="90dp"
                android:layout_height="39dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="270dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="追加済"
                android:textColor="#ff7f50"
                android:textSize="15sp" />

            <!--居酒屋の文字-->
            <TextView
                android:id="@+id/izakayaText"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="-270dp"
                android:layout_marginTop="320dp"
                android:text="居酒屋"
                android:textSize="18sp" />

            <!--追加済ボタン-->
            <TextView
                android:id="@+id/added6Button"
                android:layout_width="90dp"
                android:layout_height="39dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="320dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="追加済"
                android:textColor="#ff7f50"
                android:textSize="15sp" />

            <!--芸術の文字-->
            <TextView
                android:id="@+id/artText"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="-270dp"
                android:layout_marginTop="370dp"
                android:text="芸術 "
                android:textSize="18sp" />

            <!--追加済ボタン-->
            <TextView
                android:id="@+id/added7Button"
                android:layout_width="90dp"
                android:layout_height="39dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="370dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="追加済"
                android:textColor="#ff7f50"
                android:textSize="15sp" />

            <!--パンの文字-->
            <TextView
                android:id="@+id/breadText"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="-270dp"
                android:layout_marginTop="420dp"
                android:text="パン"
                android:textSize="18sp" />

            <!--追加済ボタン-->
            <TextView
                android:id="@+id/added8Button"
                android:layout_width="90dp"
                android:layout_height="39dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="420dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="追加済"
                android:textColor="#ff7f50"
                android:textSize="15sp" />

            <!--果物の文字-->
            <TextView
                android:id="@+id/fruitText"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="-270dp"
                android:layout_marginTop="470dp"
                android:text="果物"
                android:textSize="18sp" />

            <!--追加済ボタン-->
            <TextView
                android:id="@+id/added9Button"
                android:layout_width="90dp"
                android:layout_height="39dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="470dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="追加済"
                android:textColor="#ff7f50"
                android:textSize="15sp" />

            <!--お肉の文字-->
            <TextView
                android:id="@+id/meatText"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="-270dp"
                android:layout_marginTop="520dp"
                android:text="お肉"
                android:textSize="18sp" />

            <!--追加済ボタン-->
            <TextView
                android:id="@+id/added10Button"
                android:layout_width="90dp"
                android:layout_height="39dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="520dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="追加済"
                android:textColor="#ff7f50"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

    <!--完了ボタン-->
    <Button
        android:id="@+id/completebutton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="-5dp"
        android:backgroundTint="#6495ed"
        android:text="完了"
        android:textColor="#fff8dc"
        android:textSize="50sp" />


</LinearLayout>










